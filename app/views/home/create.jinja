{%- extends "layout.jinja" -%}
{%- block title -%}Create Blog Post{%- endblock -%}
{%- block body -%}

<!-- Google Fonts for modern look -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

<style>
    body, .blog-create-bg {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(120deg, #f8fafc 0%, #e0e7ff 100%);
        min-height: 100vh;
        margin: 0;
    }
    .blog-create-bg {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        padding: 0;
    }
    .blog-create-card {
        border-radius: 2.5rem;
        box-shadow: 0 12px 40px 0 rgba(31, 38, 135, 0.18);
        background: rgba(255,255,255,0.98);
        border: none;
        transition: box-shadow 0.3s;
    }
    .blog-create-card:hover {
        box-shadow: 0 16px 56px 0 rgba(99,102,241,0.18);
    }
    .blog-create-title {
        font-family: 'Poppins', sans-serif;
        letter-spacing: 1.5px;
        font-size: 2.5rem;
        color: #4f46e5;
        margin-bottom: 1.5rem;
        text-shadow: 0 2px 8px rgba(99,102,241,0.07);
    }
    .form-label {
        color: #6366f1;
        font-size: 1.15rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }
    .form-control {
        border-radius: 2rem;
        padding: 0.75rem 1.5rem;
        border: 1.5px solid #e0e7ff;
        background: #f4f6fb;
        font-size: 1.05rem;
        transition: border-color 0.2s, box-shadow 0.2s;
    }
    .form-control:focus {
        border-color: #6366f1;
        box-shadow: 0 0 0 0.18rem rgba(99,102,241,.13);
        background: #fff;
    }
    textarea.form-control {
        border-radius: 1.5rem;
        min-height: 160px;
        resize: vertical;
    }
    .btn-primary {
        background: linear-gradient(90deg, #6366f1 0%, #818cf8 100%);
        border: none;
        font-weight: 600;
        letter-spacing: 1px;
        font-size: 1.15rem;
        padding: 0.75rem 0;
        transition: background 0.2s, transform 0.1s;
        box-shadow: 0 4px 16px 0 rgba(99,102,241,0.10);
    }
    .btn-primary:hover, .btn-primary:focus {
        background: linear-gradient(90deg, #818cf8 0%, #6366f1 100%);
        transform: translateY(-2px) scale(1.03);
        box-shadow: 0 8px 24px 0 rgba(99,102,241,0.13);
    }
    .card-body {
        padding: 3rem 2.5rem;
    }
    @media (max-width: 600px) {
        .card-body {
            padding: 2rem 1rem;
        }
        .blog-create-title {
            font-size: 1.5rem;
        }
    }
</style>

<div class="blog-create-bg">
    <div class="container" style="max-width: 650px;">
        <div class="card blog-create-card shadow-lg border-0">
            <div class="card-body">
                <h2 class="text-center blog-create-title fw-bold">Create a New Blog Post</h2>
                {% if success %}
                    <div class="alert alert-success text-center mb-4" role="alert">
                        Blog post submitted successfully!
                    </div>
                {% endif %}
                <form method="post" action="">
                    <div class="form-group mb-4">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" id="title" name="title" placeholder="Enter post title" required>
                    </div>
                    <div class="form-group mb-4">
                        <label for="description" class="form-label">Description</label>
                        <input type="text" class="form-control" id="description" name="description" placeholder="Short description" required>
                    </div>
                    <div class="form-group mb-4">
                        <label for="post" class="form-label">Content</label>
                        <textarea class="form-control" id="post" name="post" rows="7" placeholder="Write your blog content here..." required></textarea>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{%- endblock -%}